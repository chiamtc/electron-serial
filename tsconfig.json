
{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "electron-dist",
    "lib":["es2017"],
    "target": "es6",
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "electron/**/*",
    "electron/assets/icon.png"
  ],
  "exclude":[
    "electron/test/**/*.test.ts"
  ]
}
